<h1>Products</h1>

<% @products.each do |product| %>
  <p><%= product.title %></p>
  <p><%= product.price %></p>

  <%= image_tag product.images.first.variant(resize_to_limit: [250, 250]) %>

  <p><%= link_to "Show this product", product %></p>
<% end %>

<%= link_to "New product", new_product_path %>